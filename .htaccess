DirectoryIndex index.html

RewriteEngine on

# ------------------------------
# Redirect strumix.ir (www or non-www) to https://strumix.com
RewriteCond %{HTTP_HOST} ^(www\.)?strumix\.ir$ [NC]
RewriteRule ^(.*)$ https://strumix.com/$1 [L,R=301]

# ------------------------------
# Redirect www.strumix.com to strumix.com
RewriteCond %{HTTP_HOST} ^www\.strumix\.com$ [NC]
RewriteRule ^(.*)$ https://strumix.com/$1 [L,R=301]

# ------------------------------
# Force HTTPS for strumix.com (non-www version)
RewriteCond %{HTTPS} off
RewriteCond %{HTTP_HOST} ^strumix\.com$ [NC]
RewriteRule ^(.*)$ https://strumix.com/$1 [L,R=301]

# ------------------------------
# Redirect .html URLs to clean URLs with proper encoding support
RewriteCond %{THE_REQUEST} \s/([^\s]+)\.html [NC]
RewriteRule ^ /%1 [NE,R=301,L]

# Internally map clean URLs to .html files if they exist
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^ %{REQUEST_URI}.html [NC,L]

# ------------------------------
# Custom 404 error page
ErrorDocument 404 /404error.html
